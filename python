a=input('Enter text to write to the file')
fle=open('sample2.txt','w')
rfw=fle.write(a)
fle.close()
fle=open('sample2.txt','a')
a=input('Enter additional data to append')
rfw=fle.write(a)
fle.close()
print('Data successfully appended')
print('Final content of the file is')
fle=open('sample2.txt','r')
rfw=fle.read()
print(rfw)
fle.close()
